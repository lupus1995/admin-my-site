{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./dist",
        "target": "esnext",
        "module": "esnext",
        "jsx": "react",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "paths": {
            "utils/*": ["./src/utils/*"],
            "commons/*": ["./src/commons/*"],
            "components/*": ["./src/components/*"],
            "pages/*": ["./src/pages/*"],
        }
    }
}