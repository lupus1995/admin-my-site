{
    "compilerOptions": {
        "outDir": "./dist",
        "target": "es2016",
        "module": "commonjs",
        "strict": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "jsx": "react",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "utils/*": ["../src/utils/*"],
            "commons/*": ["../src/commons/*"],
            "components/*": ["../src/components/*"],
            "pages/*": ["../src/pages/*"],
        }
    },
}